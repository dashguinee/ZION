  "possessive_rules": {
    "description": "Rules for forming possessive constructions",
    "patterns": [
      {
        "type": "first_person_singular",
        "marker": "ma",
        "forms": ["n ma", "M'ma", "mma"],
        "meaning": "my",
        "examples": [
          {"soussou": "n ma gine", "english": "my wife"},
          {"soussou": "M'ma woto", "english": "my car"},
          {"soussou": "n ma xame", "english": "my husband"}
        ]
      },
      {
        "type": "second_person_singular",
        "marker": "kha",
        "forms": ["i kha", "Ikha"],
        "meaning": "your",
        "examples": [
          {"soussou": "Ikha ChatGPT", "english": "your ChatGPT"},
          {"soussou": "i kha woto", "english": "your car"}
        ],
        "alternate": {
          "form": "itan + noun",
          "example": {"soussou": "Itan khafé", "english": "your situation"}
        }
      },
      {
        "type": "third_person_singular",
        "marker": "kha",
        "forms": ["a kha", "Akha"],
        "meaning": "his/her",
        "examples": [
          {"soussou": "Akha woto", "english": "his/her car"},
          {"soussou": "a baba", "english": "his/her father"}
        ]
      },
      {
        "type": "first_person_plural",
        "marker": "ma",
        "forms": ["won ma", "Whonma"],
        "meaning": "our",
        "examples": [
          {"soussou": "Whonma woto", "english": "our car"},
          {"soussou": "Whonma bateau", "english": "our boat"}
        ]
      },
      {
        "type": "third_person_plural",
        "marker": "kha",
        "forms": ["e kha", "Ekha", "Etan kha"],
        "meaning": "their",
        "examples": [
          {"soussou": "Ekha woto", "english": "their car"},
          {"soussou": "e baba", "english": "their father"},
          {"soussou": "Etan kha avion", "english": "their airplane"}
        ]
      }
    ],
    "general_rules": [
      {
        "rule": "First person uses -ma marker",
        "applies_to": ["1st singular (n ma)", "1st plural (won ma)"]
      },
      {
        "rule": "Third person uses -kha marker",
        "applies_to": ["3rd singular (a kha)", "3rd plural (e kha)"]
      },
      {
        "rule": "Second person can use -kha or pronoun directly",
        "applies_to": ["2nd singular (i kha / itan)"]
      },
      {
        "rule": "Possessive marker precedes noun",
        "pattern": "POSSESSIVE + NOUN"
      }
    ]
  },

  "negation_rules": {
    "description": "Rules for forming negative sentences",
    "markers": [
      {
        "form": "mu",
        "type": "negation particle",
        "position": "before verb",
        "examples": [
          {"soussou": "N mu a faxamuxi", "english": "I don't understand"}
        ]
      },
      {
        "form": "m'ma",
        "type": "contracted negation",
        "position": "before verb",
        "examples": [
          {"soussou": "Ntan m'ma kolon", "english": "I don't know"},
          {"soussou": "Ina m'ma fafé", "english": "you're not coming"},
          {"soussou": "Ana m'ma kolon", "english": "he/she doesn't know"},
          {"soussou": "Etan m'ma fafé", "english": "they're not coming"},
          {"soussou": "Ntan m'ma comprendfé", "english": "I don't understand"}
        ],
        "notes": "Different from M'ma (possessive 'my') - context determines meaning"
      }
    ],
    "sentence_pattern": {
      "formula": "SUBJECT + m'ma/mu + VERB",
      "examples": [
        {"pattern": "Ntan + m'ma + kolon", "result": "I don't know"},
        {"pattern": "Ana + m'ma + fafé", "result": "he/she isn't coming"},
        {"pattern": "Whon + m'ma + fafé", "result": "we're not coming"}
      ]
    },
    "disambiguation": {
      "negation_m'ma": "Placed before VERB → negation",
      "possessive_m'ma": "Placed before NOUN → possession (my)",
      "example": {
        "negation": "M'ma woto m'ma fafé",
        "breakdown": "My car (possessive) is not (negation) coming"
