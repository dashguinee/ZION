  "verb_suffixes": {
    "description": "Suffixes and prefixes used in verb formation",
    "patterns": [
      {
        "morpheme": "-fé",
        "function": "action/continuous marker",
        "description": "Creates action verbs, often from French roots or indicating ongoing action",
        "examples": [
          {"base": "comprend", "derived": "comprendfé", "meaning": "to understand/understanding"},
          {"base": "fa", "derived": "fafé", "meaning": "coming/to come"},
          {"base": "siga", "derived": "sigafé", "meaning": "going/to go"}
        ],
        "notes": "Can be spelled as -fé, -fe, or -fè depending on transcription"
      },
      {
        "morpheme": "-xi",
        "function": "past/perfective marker",
        "description": "Indicates completed action or past participle",
        "examples": [
          {"base": "fala", "derived": "falaxi", "meaning": "said/spoken"},
          {"base": "ba", "derived": "baxi", "meaning": "finished/done"},
          {"base": "faxamu", "derived": "faxamuxi", "meaning": "understood"},
          {"base": "keli", "derived": "kelixi", "meaning": "left/departed"},
          {"base": "tongo", "derived": "tongoxi", "meaning": "taken"},
          {"base": "to", "derived": "toxi", "meaning": "seen"},
          {"base": "suxu", "derived": "suxuxi", "meaning": "held/touched"}
        ],
        "notes": "Very productive suffix for creating perfective aspect"
      },
      {
        "morpheme": "ra-",
        "function": "causative verbal prefix",
        "description": "Adds causative meaning or indicates location/direction",
        "examples": [
          {"base": "verb", "derived": "ra-verb", "meaning": "to cause to verb"},
          {"base": "ba", "derived": "raba", "meaning": "to cause to do/make do"}
        ],
        "notes": "Also functions as locative/at particle"
      },
      {
        "morpheme": "ma-",
        "function": "present/future tense marker",
        "description": "Indicates present or future action",
        "examples": [
          {"base": "verb", "derived": "ma-verb", "meaning": "is verb-ing / will verb"}
        ],
        "notes": "Also functions as possessive marker in different context"
      },
      {
        "morpheme": "ne/nɛ",
        "function": "past tense marker",
        "description": "Indicates past tense",
        "examples": [
          {"pattern": "Subject + ne + Verb", "meaning": "Subject did Verb"}
        ],
        "notes": "Particle placed after subject"
      },
      {
        "morpheme": "bara",
        "function": "perfective/completive marker",
        "description": "Indicates completed action",
        "examples": [
          {"pattern": "Subject + bara + Verb", "meaning": "Subject has Verb-ed"}
        ],
        "notes": "Common in Bible translations"
      }
    ]
  },

