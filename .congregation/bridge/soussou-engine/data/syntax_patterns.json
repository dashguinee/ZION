  ],
  "word_order_rules": [
    {
      "rule": "Basic SOV/SOAM",
      "description": "Subject - Object - Verb - Modifier is the default word order",
      "examples": [
        {"soussou": "Ntan sosokhoui kolon", "breakdown": "S-O-V"},
        {"soussou": "Etan itan khafe comprendfe gbo", "breakdown": "S-O-V-M"}
      ]
    },
    {
      "rule": "Negation before Verb",
      "description": "Negation marker m'ma comes directly before the verb",
      "examples": [
        {"soussou": "Ina m'ma fafe", "breakdown": "S-NEG-V"},
        {"soussou": "Ntan m'ma kolon", "breakdown": "S-NEG-V"}
      ]
    },
    {
      "rule": "Question words final/near-final",
      "description": "Question words typically come at or near the end",
      "examples": [
        {"soussou": "Ina minde?", "breakdown": "S-Q"},
        {"soussou": "Telephone gui songo yiri?", "breakdown": "S-Q"},
        {"soussou": "Di ra ina dege?", "breakdown": "Q-S-V"}
      ]
    },
    {
      "rule": "Imperative OV",
      "description": "In imperatives with objects, object precedes verb",
      "examples": [
        {"soussou": "Gui sonyi", "breakdown": "O-V"},
        {"soussou": "A mato", "breakdown": "O-V"},
        {"soussou": "N'khili", "breakdown": "O-V"}
      ]
    },
    {
      "rule": "Location markers postpositional",
      "description": "Location markers (be, yire, koui) come after the noun/verb they modify",
      "examples": [
        {"soussou": "Fa be", "breakdown": "V-LOC"},
        {"soussou": "bangui koui", "breakdown": "N-LOC"},
        {"soussou": "Siga A yire", "breakdown": "V-PRO-LOC"}
      ]
    },
    {
      "rule": "Intensifier final",
      "description": "Intensifier 'gbo' comes at the end of the phrase",
      "examples": [
        {"soussou": "Urgent gbo", "breakdown": "ADJ-INT"},
        {"soussou": "Itan khafe gbo", "breakdown": "S-N-INT"},
        {"soussou": "comprendfe gbo", "breakdown": "V-INT"}
      ]
    },
    {
      "rule": "Possessive xa after possessor",
      "description": "Possessive marker xa comes between possessor and possessed",
      "examples": [
        {"soussou": "Ala xa masenyi", "breakdown": "N-POSS-N"},
        {"soussou": "Dawuda xa di", "breakdown": "N-POSS-N"}
      ]
    },
    {
      "rule": "Contracted possessives before noun",
      "description": "Contracted possessive pronouns precede the noun directly",
      "examples": [
        {"soussou": "M'ma woto", "breakdown": "POSS-N"},
        {"soussou": "Akha woto", "breakdown": "POSS-N"},
        {"soussou": "Ikha ChatGPT", "breakdown": "POSS-N"}
      ]
    },
    {
      "rule": "Emphatic pronoun fronting",
      "description": "Emphatic pronouns (-tan forms) can front for emphasis",
      "examples": [
        {"soussou": "Ntan fafe", "breakdown": "EMPH-S-V (Me, I'm coming)"},
        {"soussou": "Ntan itan situation comprendfe", "breakdown": "EMPH-S-O-V"}
      ]
    },
    {
      "rule": "Relative clause follows noun",
      "description": "Relative clauses with naxan follow the noun they modify",
      "examples": [
        {"soussou": "mixi naxan won xanuxi", "breakdown": "N-REL-clause"},
        {"soussou": "fe naxan fama rabade", "breakdown": "N-REL-clause"}
      ]
    },
    {
      "rule": "Temporal modifiers flexible",
      "description": "Time expressions can appear at start or end of sentence",
      "examples": [
        {"soussou": "Nun bi froid gbo", "breakdown": "TIME-ADJ-INT (Today is very cold)"},
        {"soussou": "A fafe demain", "breakdown": "S-V-TIME (He's coming tomorrow)"}
      ]
    }
  ],
  "particle_rules": [
    {
      "particle": "mu",
      "function": "negation",
      "placement": "before verb (usually with m'ma compound)",
      "examples": [
        {"soussou": "A mu lan", "english": "It's not fitting/allowed"},
        {"soussou": "Ina m'ma fafe", "english": "You're not coming"},
