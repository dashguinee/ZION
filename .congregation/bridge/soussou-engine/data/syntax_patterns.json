      "examples": [
        {"soussou": "Fa be", "english": "Come here"},
        {"soussou": "Dokho be", "english": "Sit here"},
        {"soussou": "Mmeme be", "english": "Wait here"}
      ]
    },
    {
      "particle": "tan",
      "function": "emphasis/only",
      "placement": "after word being emphasized",
      "examples": [
        {"soussou": "Dix mille tan", "english": "Just ten thousand"},
        {"soussou": "Taxi tan", "english": "Just taxi"},
        {"soussou": "Kisi tan", "english": "Just peace"}
      ]
    },
    {
      "particle": "gbo",
      "function": "intensifier",
      "placement": "after adjective/noun/verb (sentence-final)",
      "examples": [
        {"soussou": "Fra gbo", "english": "Very fresh"},
        {"soussou": "Urgent gbo", "english": "Very urgent"},
        {"soussou": "Itan khafe gbo", "english": "You have a lot going on"}
      ],
      "notes": "Can be extended as 'gbooo' for extra emphasis"
    },
    {
      "particle": "don",
      "function": "temporal (already/now)",
      "placement": "after verb/adjective",
      "examples": [
        {"soussou": "A yite don", "english": "It's already here/finished"},
        {"soussou": "A fafe don", "english": "He's coming now"}
      ]
    },
    {
      "particle": "yite",
      "function": "completion/arrival",
      "placement": "sentence-final",
      "examples": [
        {"soussou": "Account n'ma yitima na", "english": "Your account is almost finished"},
        {"soussou": "I woto yite?", "english": "Is your car here?"},
        {"soussou": "Nuit yite", "english": "Night has come"}
      ]
    },
    {
      "particle": "be",
      "function": "dative (to/for)",
      "placement": "after indirect object",
      "examples": [
        {"soussou": "a fala Haruna be", "english": "tell Haruna"},
        {"soussou": "fima Ala ma... be", "english": "give to God at..."},
        {"soussou": "Isirayilaka birin be", "english": "to all Israelites"}
      ],
      "notes": "Different tone/spelling from 'be' (here)"
    },
    {
      "particle": "naxa",
      "function": "narrative past",
      "placement": "between subject and verb",
      "examples": [
        {"soussou": "A naxa a fala", "english": "He said"},
        {"soussou": "E naxa siga", "english": "They went"}
      ],
      "register": "formal/literary"
    },
    {
      "particle": "kha",
      "function": "possessive marker",
      "placement": "attached to pronouns",
      "examples": [
        {"soussou": "Itan kha", "english": "your (full form)"},
        {"soussou": "Atan kha", "english": "his/her (gives Akha)"},
        {"soussou": "Etan kha", "english": "their (gives Ekha)"}
      ]
    },
    {
      "particle": "fe",
      "function": "verb-forming suffix",
      "placement": "attached to root to form action verb",
      "examples": [
