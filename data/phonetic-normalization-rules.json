  ],
  "phonetic_patterns": {
    "apostrophe_rules": {
      "description": "Apostrophes mark contraction or liaison but are often optional in writing",
      "examples": [
        "N'na = Nna (I action)",
        "Whon' = Whon (we inclusive)",
        "M'ma = Mma (my / negation)",
        "no'mma = nomma (can)"
      ],
      "rule": "Apostrophe can be present or absent without changing pronunciation"
    },
    "capitalization_rules": {
      "description": "Capitalization varies, no strict standard in informal writing",
      "examples": [
        "Ntan / ntan (I emphatic)",
        "Fafé / fafé (to come)",
        "Bé / bé (here)"
      ],
      "rule": "Both forms are valid, normalize to lowercase for matching"
    },
    "accent_marks": {
      "description": "Accented vowels (é, ɛ, ɔ) sometimes written plain (e, e, o)",
      "examples": [
        "fafé / fafe (to come)",
        "bé / be (here)",
        "mindé / minde (where)",
        "kɔlɛ / kole (today)"
      ],
      "rule": "é ↔ e, ɛ ↔ e, ɔ ↔ o are variants of same word"
    },
    "short_forms": {
      "description": "Pronouns have emphatic and short forms",
      "examples": [
        "Itan → I (you emphatic → you short)",
        "Atan/Ana → A (he/she emphatic → he/she short)",
        "Fafé → Fa (come verb → come imperative)"
      ],
      "rule": "Short forms used in informal/quick speech, imperatives"
    },
    "french_verb_suffix": {
      "description": "PRODUCTIVE PATTERN: French verbs + -fé becomes Soussou verbs",
      "pattern": "[French infinitive] + -fé → [Soussou verb]",
      "examples": [
        "comprendre + -fé → comprendfé (to understand)",
        "fixer + -fé → fixfé (to fix)",
        "manger + -fé → mangéfé (to eat)",
        "travailler + -fé → travailléfé (to work)"
      ],
      "rule": "ANY French verb can become Soussou by adding -fé suffix",
      "notes": "This is modern Guinea Conakry innovation, may not appear in old dictionaries"
    },
    "kh_sound": {
      "description": "'kh' represents voiceless velar fricative /x/ (like German 'ch' in 'Bach')",
      "examples": [
        "khafé (situation/because)",
        "Ikha (your)",
        "Akha (his/her)",
        "Ekha (their)",
        "sosokhoui (Soussou language)"
      ],
      "alternative_spelling": "Sometimes written as 'x' (sosoxui)",
      "rule": "kh ↔ x are variants representing /x/ sound"
    },
    "nasal_consonants": {
      "description": "Prenasalized consonants exist but rare word-initially",
      "examples": [
        "ngo (and/what about) - /ŋo/",
        "ǹgá (mother) - rare prenasalized /ŋga/"
      ],
      "rule": "Most nasal sounds are straightforward /m/, /n/, /ŋ/"
    }
  },
  "normalization_algorithm": {
    "description": "Steps to normalize Soussou text for AI matching",
    "steps": [
      {
        "step": 1,
        "action": "Convert to lowercase",
        "example": "Ntan → ntan, Fafé → fafé"
      },
      {
        "step": 2,
        "action": "Remove apostrophes",
        "example": "n'a → na, whon' → whon, m'ma → mma"
      },
      {
        "step": 3,
        "action": "Normalize accented vowels",
        "mapping": {
          "é": "e",
          "ɛ": "e",
          "ɔ": "o",
          "à": "a",
          "è": "e",
          "ò": "o"
        },
        "example": "fafé → fafe, kɔlɛ → kole"
      },
      {
        "step": 4,
        "action": "Normalize kh/x variants",
        "example": "khafé → khafe, sosoxui → sosokhoui"
      },
      {
        "step": 5,
        "action": "Look up in canonical dictionary",
        "example": "After normalization, match against canonical forms"
      }
    ],
    "implementation_example": {
      "javascript": "function normalize(soussouText) {\n  return soussouText\n    .toLowerCase()\n    .replace(/'/g, '')\n    .replace(/[éèê]/g, 'e')\n    .replace(/[àâ]/g, 'a')\n    .replace(/[ɛ]/g, 'e')\n    .replace(/[ɔ]/g, 'o')\n    .replace(/x/g, 'kh');\n}",
      "usage": "normalize('N\\'na fafé') → 'na fafe'"
    }
  },
