  },
  "normalization_rules": [
    {
      "canonical": "na",
      "variants": ["N'na", "Nna", "Na", "n'a", "N'a"],
      "phonetic": "/na/",
      "meaning": "I (action form)",
      "usage": "Subject pronoun + action",
      "notes": "Apostrophe optional, capitalization varies"
    },
    {
      "canonical": "ina",
      "variants": ["I na", "Ina"],
      "phonetic": "/ina/",
      "meaning": "you are / are you",
      "usage": "Second person pronoun + state/action",
      "notes": "Can be written as one or two words"
    },
    {
      "canonical": "ana",
      "variants": ["A na", "Ana"],
      "phonetic": "/ana/",
      "meaning": "he/she is / is he/she",
      "usage": "Third person pronoun + state/action",
      "notes": "Can be written as one or two words"
    },
    {
      "canonical": "whon",
      "variants": ["Whon'", "Whon", "whon'", "whon"],
      "phonetic": "/wɔn/",
      "meaning": "we (inclusive)",
      "usage": "First person plural pronoun",
      "notes": "Apostrophe marks inclusive form, sometimes omitted"
    },
    {
      "canonical": "mma",
      "variants": ["M'ma", "Mma", "m'ma"],
      "phonetic": "/mma/",
      "meaning": "negation marker OR possessive 'my'",
      "usage": "Context-dependent: Negation OR possession",
      "notes": "CRITICAL: Same spelling, different meanings based on context. Negation: Pronoun + m'ma + Verb. Possession: M'ma + Noun"
    },
    {
      "canonical": "fafe",
      "variants": ["fafé", "Fafé", "Fa", "fa"],
      "phonetic": "/fafe/",
      "meaning": "to come / come",
      "usage": "Movement verb",
      "notes": "Accented é vs plain e variant, short form 'Fa' used in imperatives"
    },
    {
      "canonical": "rafe",
      "variants": ["rafé", "Rafé", "Rafe"],
      "phonetic": "/rafe/",
      "meaning": "to come (variant)",
      "usage": "Alternative to fafé",
      "notes": "R/F variation, same meaning"
    },
    {
      "canonical": "be",
      "variants": ["bé", "Bé", "be"],
      "phonetic": "/be/",
      "meaning": "here",
      "usage": "Location marker",
      "notes": "Accented vs plain vowel"
    },
    {
      "canonical": "minde",
      "variants": ["mindé", "Mindé", "minde"],
      "phonetic": "/minde/",
      "meaning": "where",
      "usage": "Question word",
      "notes": "Wh-in-situ (stays in original position)"
    },
    {
      "canonical": "khafe",
      "variants": ["khafé", "Khafé", "khafe"],
      "phonetic": "/xafe/",
      "meaning": "situation / because of / regarding",
