      "notes": "'kh' represents voiceless velar fricative /x/"
    },
    {
      "canonical": "comprendre+fe",
      "variants": ["comprendfé", "comprenfé", "comprendfe"],
      "phonetic": "/kɔ̃prɑ̃dfe/",
      "meaning": "to understand",
      "usage": "French verb + Soussou -fé suffix",
      "notes": "PRODUCTIVE PATTERN: French infinitive verb + -fé becomes Soussou verb"
    },
    {
      "canonical": "i",
      "variants": ["I", "Itan", "i"],
      "phonetic": "/i/",
      "meaning": "you (singular)",
      "usage": "Short form of Itan",
      "notes": "Informal/teasing context, short form"
    },
    {
      "canonical": "a",
      "variants": ["A", "Ana", "Atan", "a"],
      "phonetic": "/a/",
      "meaning": "he/she/it",
      "usage": "Short form of Ana/Atan",
      "notes": "Third person singular short form"
    },
    {
      "canonical": "ikha",
      "variants": ["Ikha", "I kha", "Itan kha"],
      "phonetic": "/ixa/",
      "meaning": "your",
      "usage": "Second person possessive",
      "notes": "kha = possession marker"
    },
    {
      "canonical": "akha",
      "variants": ["Akha", "A kha", "Ana kha"],
      "phonetic": "/axa/",
