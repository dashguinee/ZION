METADATA_CACHE_TTL=86400   # 24 hours
LIVE_TOKEN_TTL=300         # 5 minutes
HLS_PLAYLIST_TTL=3600      # 1 hour

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
