# Server Configuration
NODE_ENV=development
PORT=3000

# Starshare IPTV Provider (Your credentials - used for ALL users)
STARSHARE_BASE_URL=https://starshare.cx
STARSHARE_USERNAME=AzizTest1
STARSHARE_PASSWORD=Test1

# Redis Cache (Railway will provide this automatically)
REDIS_URL=redis://localhost:6379

# FFmpeg Configuration
FFMPEG_THREADS=4
MAX_QUALITY=1080p
DEFAULT_QUALITY=720p

# Caching (Aggressive = Lower Bandwidth Costs!)
