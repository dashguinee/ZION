# Server Configuration
NODE_ENV=development
PORT=3000

# Starshare IPTV Provider (Your credentials - used for ALL users)
# REQUIRED: Server will not start without these
STARSHARE_BASE_URL=https://starshare.cx
STARSHARE_USERNAME=your_starshare_username
STARSHARE_PASSWORD=your_starshare_password

# Admin API Key (CRITICAL SECURITY)
# REQUIRED: Generate a strong random key (32+ characters)
# Example: openssl rand -hex 32
ADMIN_API_KEY=your_secure_random_admin_key_here

# Redis Cache (Railway will provide this automatically)
REDIS_URL=redis://localhost:6379

# FFmpeg Configuration
FFMPEG_THREADS=4
MAX_QUALITY=1080p
DEFAULT_QUALITY=720p

# Caching (Aggressive = Lower Bandwidth Costs!)
SEGMENT_CACHE_TTL=2592000  # 30 days - keeps popular content cached
METADATA_CACHE_TTL=86400   # 24 hours
LIVE_TOKEN_TTL=300         # 5 minutes
HLS_PLAYLIST_TTL=3600      # 1 hour

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
